{
  "name": "basic",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build --mode client && vite build",
    "preview": "bun run --cwd=dist index.js",
    "check": "biome check .",
    "check:write": "biome check --write .",
    "type-check": "tsc --noEmit",
    "format": "prettier --ignore-path .prettierignore --ignore-path .gitignore --write . && biome format --write .",
    "prettier": "prettier --ignore-path .prettierignore --ignore-path .gitignore --check ."
  },
  "private": true,
  "dependencies": {
    "hono": "^4.7.9",
    "honox": "^0.1.40"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@cloudflare/workers-types": "4.20250514.0",
    "@hono/vite-build": "1.6.1",
    "@hono/vite-dev-server": "0.19.0",
    "@tailwindcss/vite": "4.1.6",
    "prettier": "3.5.3",
    "tailwindcss": "4.1.6",
    "vite": "6.3.5"
  }
}
